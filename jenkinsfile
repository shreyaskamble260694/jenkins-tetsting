pipeline {
    agent any
    environment {
        NAME = 'shreyas ganesh kamble' // Define environment variable
    }
    parameters {
        string(name: 'person', defaultValue: 'shreyas kamble', description: "Who are you?")
        choice(name: 'city', choices: ['pune', 'mumbai', 'dubai', 'singapore','idhao'], description: "Which city?")
    }
    stages {
        stage('Build') {
            steps {
                echo "Build ID: ${env.BUILD_ID}"
                echo "Name of person: ${params.person}" // Access parameter using 'params' object
            }
        }

        stage('Package') {
            steps {
                echo "Hello from Test"
                echo 'Hello Shreyas'
            }
        }

        stage('Code Scan') {
            steps {
                echo "Code check quality using SonarQube"
                echo 'Done code quality'
            }
        }

        stage('Testing Environment') {
            steps {
                echo '======== Executing Testing Environment ========'
            }
        }

        stage('Continue?') {
            steps {
                input message: "Should we continue?", ok: "Yes, we should continue"
            }
        }

        stage('Production Environment') {
            steps {
                echo '======== Executing Production Environment ========'
            }
        }
    }
    post {
        always {
            echo '======== Always Executed ========'
        }
        success {
            echo '======== Pipeline Executed Successfully ========'
        }
        failure {
            echo '======== Pipeline Execution Failed ========'
        }
    }
}
